<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<Configuration>
	<Properties>
		<Property name="InfoFileName">/DevTools/Development/FMS_FILES/logs/infolog.log
		</Property>
		<Property name="ErrorFileName">/DevTools/Development/FMS_FILES/logs/errorlog.log
		</Property>
	</Properties>
	<Appenders>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} - %-5p %c :%L - %m%n" />
		</Console>
		<File name="InfoFile" fileName="${InfoFileName}">
			<Filters>
				<ThresholdFilter level="WARN" onMatch="DENY" onMismatch="NEUTRAL" />
				<ThresholdFilter level="ERROR" onMatch="DENY" onMismatch="NEUTRAL" />
				<ThresholdFilter level="FATAL" onMatch="DENY" onMismatch="NEUTRAL" />
			</Filters>
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} - %-5p %c :%L - %m%n" />
		</File>
		<File name="ErrorFile" fileName="${ErrorFileName}">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} - %-5p %c :%L - %m%n" />
		</File>
	</Appenders>
	<Loggers>
		<Logger name="com.url.app" level="DEBUG" additivity="false">
			<AppenderRef ref="STDOUT" />
			<AppenderRef ref="InfoFile" level="DEBUG" />
			<AppenderRef ref="ErrorFile" level="WARN" />
		</Logger>
		<Logger name="org.springframework.core" level="INFO" additivity="false">
			<AppenderRef ref="STDOUT" />
			<AppenderRef ref="InfoFile" level="INFO" />
			<AppenderRef ref="ErrorFile" level="WARN" />
		</Logger>
		<Logger name="org.springframework.beans" level="INFO" additivity="false">
			<AppenderRef ref="STDOUT" />
			<AppenderRef ref="InfoFile" level="INFO" />
			<AppenderRef ref="ErrorFile" level="WARN" />
		</Logger>
		<Logger name="org.springframework.context" level="INFO" additivity="false">
			<AppenderRef ref="STDOUT" />
			<AppenderRef ref="InfoFile" level="INFO" />
			<AppenderRef ref="ErrorFile" level="WARN" />
		</Logger>
		<Logger name="org.springframework.web" level="INFO" additivity="false">
			<AppenderRef ref="STDOUT" />
			<AppenderRef ref="InfoFile" level="INFO" />
			<AppenderRef ref="ErrorFile" level="WARN" />
		</Logger>
		<Logger name="org.springframework.security" level="INFO" additivity="false">
			<AppenderRef ref="STDOUT" />
			<AppenderRef ref="InfoFile" level="INFO" />
			<AppenderRef ref="ErrorFile" level="WARN" />
		</Logger>
		<Logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
			<AppenderRef ref="STDOUT" />
			<AppenderRef ref="InfoFile" level="DEBUG" />
			<AppenderRef ref="ErrorFile" level="WARN" />
		</Logger>
		<Logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE" additivity="false">
			<AppenderRef ref="STDOUT" />
			<AppenderRef ref="InfoFile" level="TRACE" />
			<AppenderRef ref="ErrorFile" level="WARN" />
		</Logger>
		<Root level="WARN" additivity="false">
			<AppenderRef ref="STDOUT" />
			<AppenderRef ref="InfoFile" level="INFO" />
			<AppenderRef ref="ErrorFile" level="WARN" />
		</Root>
	</Loggers>
</Configuration>